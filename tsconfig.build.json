{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "esnext",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": ".",
    "declarationDir": ".",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
